<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Ument"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_weight="0.17" />

        <Button
            android:id="@+id/back_addument"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/backbutton" />

        <Button
            android:id="@+id/send_addument"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/checkbox" />
    </RelativeLayout>

    <EditText
        android:id="@+id/textView_addument"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:gravity="left|top"
        android:inputType="textMultiLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/picturechoose_addument"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gallary_button" />

        <Button
            android:id="@+id/picturetake_addument"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/camera_button"
            android:layout_toRightOf="@+id/picturechoose_addument" />
        
        
        <Button
            android:id="@+id/addument_event"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/scheduler_button_unclicked"
            android:layout_alignParentRight="true"
             />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#00BFFF" />

    <ImageView
        android:id="@+id/imageView_addument"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/border"
        android:src="@drawable/aap" 
        android:layout_gravity="center"
        android:visibility="gone"
        />

</LinearLayout>