<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ument_background"
        android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/thumbnail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:background="#F8F8FF"
            android:padding="3dip" >

            <ImageView
                android:id="@+id/list_image2"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:scaleType="fitXY"
                android:src="@drawable/aap" />
        </LinearLayout>

        <TextView
            android:id="@+id/username_ument2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail2"
            android:layout_toRightOf="@+id/thumbnail2"
            android:text="User_name"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/time_ument2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_ument2"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail2"
            android:text="01-08-2015"
            android:textColor="#343434"
            android:textSize="10dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=">>" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_ument2"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textColor="#343434"
        android:textSize="14sp" />
	</LinearLayout>

    <ImageView
        android:id="@+id/imageview_event2"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/add_event2"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/umentborder"
        android:text="@string/event"
        android:textColor="#00BFFF"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/like2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:background="@drawable/umentborder"
            android:text="Like"
            android:textColor="#000000"
            android:textSize="15sp" /> 

        <Button
            android:id="@+id/umentcomment2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:background="@drawable/umentborder"
            android:text="Comment"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>