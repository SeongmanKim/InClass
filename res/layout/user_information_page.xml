<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/userinfo_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background"
        android:orientation="horizontal"
        android:weightSum="1" >
        <Button
            android:id="@+id/user_infor_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/backbutton" />

        <TextView
            android:id="@+id/userinfo_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_weight="0.17"/>

 

            <Button
                android:id="@+id/userinfo_send_message_button"
                android:layout_width="50dp"
                 android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:background="@drawable/send_message_to_user"/>

        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userinfo_settingpic_"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/nametitle"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/userinfo_setting_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:background="@drawable/profilepictureborder" />
        
        <TextView
            android:id="@+id/userinfo_settingname"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/userinfo_setting_image"
            android:layout_marginTop="19dp"
            android:layout_toRightOf="@+id/userinfo_setting_image"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="name_"
            android:textColor="#FFFFFF"
            android:textSize="25dp" >
        </TextView>
        
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#DCDCDC" />

    <RelativeLayout
        android:id="@+id/userinfo_emaillayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/userinfo_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:text="E-mail"
            android:textColor="#B0B0B0"
            android:typeface="serif"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/userinfo_settingEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:singleLine="true"
            android:text="name goes here"
            android:textColor="#B0B0B0"
            android:textSize="20dp" >
        </TextView>
    </RelativeLayout>
        <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#DCDCDC" />
    <RelativeLayout
        android:id="@+id/myument"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/commentbuttonstyle"
        android:orientation="horizontal"
        android:textColor="#000000" >

        <TextView
          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="MyUment"
            
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text=">"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20dp" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#DCDCDC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Classes" />
    </RelativeLayout>

    <ListView
        android:id="@+id/userinfo_classlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:textColor="#DCDCDC" >
    </ListView>

</LinearLayout>