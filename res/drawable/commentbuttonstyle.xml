<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="9dp" />
             <stroke android:width="2dp" android:color="#4444FF" />
             <gradient  android:angle="45"  android:startColor="#FFFFFF" android:endColor="#F0F0F0" />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#2c2f34" />
             <solid  android:color="#1d242c"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="9dp" />
             <stroke android:width="2dp" android:color="#FF4444" />
             <gradient  android:angle="45"  android:startColor="#FFFFFF" android:endColor="#F0F0F0" />            
         </shape>
     </item>
</selector>